<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<nsd>
  <options>
    <user-id>@user@</user-id>
    <directory>@prefix@</directory>
    <database>@dbfile@</database>
    <pid-file>@pidfile@</pid-file>
    <server-count>1</server-count>
    <maximum-tcp-connection-count>10</maximum-tcp-connection-count>
    <controls>
      <!-- TODO: access control -->
      <address port="853">127.0.0.1</address>
      <address port="853">::1</address>
    </controls>
  </options>

  <zone name="sample.">
    <file>@zonesdir@/sample.zone</file>
  </zone>
</nsd>
