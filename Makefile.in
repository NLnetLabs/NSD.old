server.o: server.c config.h axfr.h nsd.h region-allocator.h query.h \
  buffer.h util.h dname.h heap.h rbtree.h namedb.h dns.h netio.h \
  plugins.h nsd-plugin.h
util.o: util.c config.h util.h
