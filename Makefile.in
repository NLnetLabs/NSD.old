# Standard installation pathnames
SHELL = @SHELL@
prefix	= @prefix@
exec_prefix = @exec_prefix@
sbindir	= @sbindir@
mandir = @mandir@

# NSD specific pathnames
configdir = @configdir@
pidfile = @pidfile@
zonesfile = @zonesfile@
dbfile = @dbfile@
configfile = @configfile@
zonesdir = @zonesdir@
namedxfer = @namedxfer@
user = @user@

CC		= @CC@
CFLAGS		= @CFLAGS@ @DEFS@ -I. -DDBFILE=\"$(dbfile)\" -DPIDFILE=\"$(pidfile)\" -DUSER=\"$(user)\"
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@
LIBWRAP		= @LIBWRAP@
LIBOBJS		= @LIBOBJS@
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@

COMPILE		= $(CC) $(CFLAGS) -c
LINK		= $(CC) $(LDFLAGS)
EDIT		= sed \
			-e 's,@prefix\@,$(prefix),g' \
			-e 's,@exec_prefix\@,$(exec_prefix),g' \
			-e 's,@sbindir\@,$(sbindir),g' \
			-e 's,@configdir\@,$(configdir),g' \
			-e 's,@zonesdir\@,$(zonesdir),g' \
			-e 's,@pidfile\@,$(pidfile),g' \
			-e 's,@zonesfile\@,$(zonesfile),g' \
			-e 's,@dbfile\@,$(dbfile),g' \
			-e 's,@configfile\@,$(configfile),g' \
			-e 's,@namedxfer\@,$(namedxfer),g' \
			-e 's,@user\@,$(user),g'

all:	nsd nsq zonec nsd-axfr nsdc.sh nsdc.conf.sample

.c.o:
	$(CC) $(CFLAGS) -c $<

nsdc.sh:	nsdc.sh.in
	rm -f nsdc.sh
	$(EDIT) nsdc.sh.in > nsdc.sh

nsdc.conf.sample:	nsdc.conf.sample.in
	rm -f nsdc.conf.sample
	$(EDIT) nsdc.conf.sample.in > nsdc.conf.sample

install: all
	$(INSTALL) -d $(sbindir)
	$(INSTALL) -d $(configdir)
	$(INSTALL) -d $(mandir)
	$(INSTALL) -d $(mandir)/man8
	$(INSTALL) -s nsd $(sbindir)/nsd
	$(INSTALL) -s zonec $(sbindir)/zonec
	$(INSTALL) -s nsd-axfr $(sbindir)/nsd-axfr
	$(INSTALL) nsdc.sh $(sbindir)/nsdc
	$(INSTALL_DATA) nsd.8 $(mandir)/man8
	$(INSTALL_DATA) nsdc.8 $(mandir)/man8
	$(INSTALL_DATA) zonec.8 $(mandir)/man8
	$(INSTALL_DATA) nsd-axfr.8 $(mandir)/man8
	$(INSTALL_DATA) nsdc.conf.sample $(configfile).sample
	$(INSTALL_DATA) nsd.zones.sample $(zonesfile).sample

uninstall:
	@echo
	rm -f -- $(sbindir)/nsd $(sbindir)/zonec $(sbindir)/nsdc $(sbindir)/nsd-axfr
	rm -f -- $(mandir)/man8/nsd.8 $(mandir)/man8/nsdc.8 $(mandir)/man8/zonec.8 $(mandir)/man8/nsd-axfr.8
	rm -f -- $(pidfile) $(dbfile)
	@echo
	@echo "You still need to remove $(configdir) directory by hand."

nsd:	nsd.h dns.h nsd.o server.o query.o dbaccess.o rbtree.o hash.o $(LIBOBJS)
	$(LINK) -o $@ nsd.o server.o query.o dbaccess.o rbtree.o hash.o $(LIBOBJS) $(LIBWRAP) $(LIBS)

zonec:	zparser.h dns.h zonec.h zparser.o dname.o zonec.o dbcreate.o rbtree.o hash.o $(LIBOBJS)
	$(LINK) -o $@ zonec.o zparser.o dname.o dbcreate.o rbtree.o hash.o $(LIBOBJS) $(LIBS)

nsq:	zparser.h dns.h nsq.o client.o zparser.o dname.o $(LIBOBJS)
	$(LINK) -o $@ nsq.o client.o zparser.o dname.o $(LIBOBJS) $(LIBS)

nsd-axfr:	zparser.h dns.h nsd-axfr.o client.o zparser.o dname.o $(LIBOBJS)
	$(LINK) -o $@ nsd-axfr.o client.o zparser.o dname.o $(LIBOBJS) $(LIBS)

clean:
	rm -f zonec nsd zparser hash rbtree nsd-axfr nsq *.o y.* *.core *.gmon nsd.db nsdc.sh nsdc.conf.sample

realclean: clean
	rm -f Makefile config.h config.h.in config.log config.status configure
	rm -rf autom4te*

basename.o:	compat/basename.c
	$(COMPILE) -c compat/basename.c -o basename.o

inet_pton.o:	compat/inet_pton.c
	$(COMPILE) -c compat/inet_pton.c -o inet_pton.o

b64_pton.o:	compat/b64_pton.c
	$(COMPILE) -c compat/b64_pton.c -o b64_pton.o

b64_ntop.o:	compat/b64_ntop.c
	$(COMPILE) -c compat/b64_ntop.c -o b64_ntop.o

snprintf.o:	compat/snprintf.c
	$(COMPILE) -c compat/snprintf.c -o snprintf.o

vsnprintf.o:	compat/vsnprintf.c
	$(COMPILE) -c compat/vsnprintf.c -o vsnprintf.o

timegm.o:	compat/timegm.c
	$(COMPILE) -c compat/timegm.c -o timegm.o


# Test programs
rbtree:	rbtree.c rbtree.h
	$(COMPILE) -DTEST rbtree.c
	$(LINK) -o $@ rbtree.o $(LIBS)

hash:	hash.c hash.h
	$(COMPILE) -DTEST hash.c
	$(LINK) -o $@ hash.o $(LIBS)

zparser:	zparser.c dname.o  $(LIBOBJS)
	$(LINK) $(CFLAGS) -D TEST -o $@ zparser.c dname.o $(LIBOBJS) $(LIBS)

# autoconf rules
config.h.in:	configure.ac
	autoheader

configure:	configure.ac
	autoconf

# Dependencies
client.o: client.c config.h dns.h namedb.h heap.h rbtree.h dname.h nsd.h \
  zparser.h query.h zonec.h client.h
dbaccess.o: dbaccess.c config.h namedb.h heap.h rbtree.h
dbcreate.o: dbcreate.c config.h namedb.h heap.h rbtree.h
dname.o: dname.c config.h dns.h dname.h namedb.h heap.h rbtree.h
hash.o: hash.c hash.h
nsd-axfr.o: nsd-axfr.c config.h dns.h namedb.h heap.h rbtree.h dname.h \
  nsd.h query.h zparser.h client.h
nsd.o: nsd.c config.h dns.h dname.h namedb.h heap.h rbtree.h nsd.h \
  query.h
nsq.o: nsq.c config.h dns.h namedb.h heap.h rbtree.h dname.h nsd.h \
  zparser.h query.h zonec.h client.h
query.o: query.c config.h dns.h dname.h nsd.h namedb.h heap.h rbtree.h \
  query.h
rbtree.o: rbtree.c rbtree.h
server.o: server.c config.h dns.h namedb.h heap.h rbtree.h dname.h nsd.h \
  query.h
zonec.o: zonec.c config.h heap.h rbtree.h dns.h zparser.h namedb.h \
  dname.h zonec.h
zparser.o: zparser.c config.h dns.h zparser.h dname.h
