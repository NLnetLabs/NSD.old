zlexer.c:	zlexer.lex
	$(LEX) -i -o$@ zlexer.lex

zparser.c zparser.h: zparser.y
	$(YACC) -d -o zparser.c zparser.y

configlexer.c:	configlexer.lex
	$(LEX) -i -oconfiglexer.c.tmp configlexer.lex
	echo "#include \"configyyrename.h\"" > configlexer.c
	cat configlexer.c.tmp >> configlexer.c ; rm -rf configlexer.c.tmp

configparser.c configparser.h:	configparser.y
	$(YACC) -d -o configparser.c configparser.y

