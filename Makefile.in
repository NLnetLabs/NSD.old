#
# Standard autoconf pathnames
#
SHELL = @SHELL@
prefix	= @prefix@
exec_prefix = @exec_prefix@
sbindir	= @sbindir@
localstatedir = @localstatedir@
mandir = @mandir@

#
# NSD specific pathnames
#
NSDHOME		= @nsdhome@
NSDDB           = @nsddb@
NSDPIDFILE      = @nsdpidfile@

CC		= @CC@
CFLAGS		= @CFLAGS@ @DEFS@ -DCF_DBFILE=\"@nsddb@\" -DCF_PIDFILE=\"@nsdpidfile@\" -DCF_USERNAME=\"@nsduser@\"
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@
LIBWRAP		= @LIBWRAP@
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@

COMPILE		= ${CC} ${CFLAGS} -c
LINK		= ${CC} ${LDFLAGS}

# This might be necessary for a system like SunOS 4.x
COMPAT_O =	@COMPAT_O@

CLEANFILES+=*.core *.gmon

all:	nsd zonec nsd-notify

.c.o:
	${CC} ${CFLAGS} -c $<

install: all
	[ -d ${sbindir} ] || mkdir ${sbindir}
	[ -d ${NSDHOME} ] || mkdir ${NSDHOME}
	[ -d ${mandir} ] || mkdir ${mandir}
	${INSTALL} -s nsd ${sbindir}/nsd
	${INSTALL} -s zonec ${NSDBINDIR}/zonec
	${INSTALL} -s nsd-notify sbindir/nsd-notify
	${INSTALL} nsdc.sh ${sbindir}/nsdc
	${INSTALL} nsd.8 ${mandir}/man8
	${INSTALL} nsdc.8 ${mandir}/man8
	${INSTALL} zonec.8 ${mandir}/man8
	${INSTALL} nsd-notify.8 ${mandir}/man8

uninstall:
	@echo
	rm -f -- ${NSDBINDIR}/nsd ${NSDBINDIR}/zonec ${NSDBINDIR}/nsdc ${NSDNOTIFY}
	rm -f -- ${NSDMANDIR}/nsd.8 ${NSDMANDIR}/nsdc.8 ${NSDMANDIR}/zonec.8
	rm -f -- ${NSDPIDFILE}
	@echo
	@echo "You still need to remove ${NSDZONESDIR} directory by hand."

nsd:	nsd.h dns.h nsd.o server.o query.o dbaccess.o rbtree.o hash.o ${COMPAT_O}
	${LINK} -o $@ nsd.o server.o query.o dbaccess.o rbtree.o hash.o ${COMPAT_O} ${LIBWRAP}

zonec:	zf.h dns.h zonec.h zf.o zonec.o dbcreate.o rbtree.o hash.o rfc1876.o ${COMPAT_O}
	${LINK} -o $@ zonec.o zf.o dbcreate.o rbtree.o hash.o rfc1876.o ${COMPAT_O}

nsd-notify:	nsd-notify.c query.o dbaccess.o zf.o rbtree.o rfc1876.o
	${LINK} -o $@ nsd-notify.c query.o dbaccess.o zf.o rbtree.o rfc1876.o

clean:
	rm -f zonec nsd zf hash rbtree nsd-notify *.o y.* *.core *.gmon nsd.db nsdc.sh nsdc.conf.sample

basename.o:	compat/basename.c
	${COMPILE} -c compat/basename.c -o basename.o

inet_pton.o:	compat/inet_pton.c
	${COMPILE} -c compat/inet_pton.c -o inet_pton.o


# Test programs
rbtree:	rbtree.c rbtree.h
	${COMPILE} -DTEST rbtree.c
	${LINK} -o $@ rbtree.o

hash:	hash.c hash.h
	${COMPILE} -DTEST hash.c
	${LINK} -o $@ hash.o

zf:	zf.h dns.h zf.c rfc1876.c
	${COMPILE} -DTEST zf.c rfc1876.c
	${LINK} -o $@ zf.o rfc1876.o

${OBJS}:	${HDRS}

# Dependencies (gcc -MM)
dbaccess.o: dbaccess.c namedb.h config.h heap.h rbtree.h
dbcreate.o: dbcreate.c namedb.h config.h heap.h rbtree.h
hash.o: hash.c hash.h
nsd.o: nsd.c nsd.h config.h dns.h namedb.h heap.h rbtree.h query.h
query.o: query.c nsd.h config.h dns.h namedb.h heap.h rbtree.h query.h
rbtree.o: rbtree.c rbtree.h
server.o: server.c nsd.h config.h dns.h namedb.h heap.h rbtree.h \
 query.h
zf.o: zf.c dns.h nsd.h config.h namedb.h heap.h rbtree.h query.h zf.h
zonec.o: zonec.c zonec.h config.h heap.h rbtree.h dns.h zf.h namedb.h
