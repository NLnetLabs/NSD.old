# Standard installation pathnames
SHELL = @SHELL@
prefix	= @prefix@
exec_prefix = @exec_prefix@
sbindir	= @sbindir@
mandir = @mandir@

# NSD specific pathnames
configdir = @configdir@
pidfile = @pidfile@
zonesfile = @zonesfile@
dbfile = @dbfile@
configfile = @configfile@
zonesdir = @zonesdir@
namedxfer = @namedxfer@
user = @user@

CC		= @CC@
CPPFLAGS	= @CPPFLAGS@ @DEFS@ -I. -DDBFILE=\"$(dbfile)\" -DPIDFILE=\"$(pidfile)\" -DUSER=\"$(user)\"
CFLAGS		= @CFLAGS@
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@
LIBWRAP		= @LIBWRAP@
LIBOBJS		= @LIBOBJS@
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@

COMPILE		= $(CC) $(CPPFLAGS) $(CFLAGS)
LINK		= $(CC) $(CFLAGS) $(LDFLAGS)
EDIT		= sed \
			-e 's,@prefix\@,$(prefix),g' \
			-e 's,@exec_prefix\@,$(exec_prefix),g' \
			-e 's,@sbindir\@,$(sbindir),g' \
			-e 's,@configdir\@,$(configdir),g' \
			-e 's,@zonesdir\@,$(zonesdir),g' \
			-e 's,@pidfile\@,$(pidfile),g' \
			-e 's,@zonesfile\@,$(zonesfile),g' \
			-e 's,@dbfile\@,$(dbfile),g' \
			-e 's,@configfile\@,$(configfile),g' \
			-e 's,@shell\@,$(SHELL),g' \
			-e 's,@namedxfer\@,$(namedxfer),g' \
			-e 's,@user\@,$(user),g'

TARGETS 	= nsd zonec nsd-notify nsdc.sh nsdc.conf.sample

NSD_OBJECTS	= 				\
	dbaccess.o 				\
	nsd.o					\
	plugins.o 				\
	query.o 				\
	rbtree.o 				\
	region-allocator.o 			\
	server.o 				\
	util.o

ZONEC_OBJECTS	= 				\
	dbcreate.o 				\
	dname.o 				\
	rbtree.o 				\
	region-allocator.o			\
	util.o 					\
	zonec.o 				\
	zparser.o 	

NSD_NOTIFY_OBJECTS	= 			\
	nsd-notify.o 				\
	dname.o 				\
	rbtree.o				\
	region-allocator.o			\
	util.o

all:	$(TARGETS)

.c.o:
	$(COMPILE) -c $<

nsdc.sh:	nsdc.sh.in
	rm -f nsdc.sh
	$(EDIT) nsdc.sh.in > nsdc.sh

nsdc.conf.sample:	nsdc.conf.sample.in
	rm -f nsdc.conf.sample
	$(EDIT) nsdc.conf.sample.in > nsdc.conf.sample

install: all
	$(INSTALL) -d $(sbindir)
	$(INSTALL) -d $(configdir)
	$(INSTALL) -d $(mandir)
	$(INSTALL) -d $(mandir)/man8
	$(INSTALL) nsd $(sbindir)/nsd
	$(INSTALL) zonec $(sbindir)/zonec
	$(INSTALL) nsdc.sh $(sbindir)/nsdc
	$(INSTALL) nsd-notify $(sbindir)/nsd-notify
	$(INSTALL_DATA) nsd.8 $(mandir)/man8
	$(INSTALL_DATA) nsdc.8 $(mandir)/man8
	$(INSTALL_DATA) zonec.8 $(mandir)/man8
	$(INSTALL_DATA) nsd-notify.8 $(mandir)/man8/nsd-notify.8
	$(INSTALL_DATA) nsdc.conf.sample $(configfile).sample
	$(INSTALL_DATA) nsd.zones.sample $(zonesfile).sample

uninstall:
	@echo
	rm -f -- $(sbindir)/nsd $(sbindir)/zonec $(sbindir)/nsdc $(sbindir)/nsd-notify
	rm -f -- $(mandir)/man8/nsd.8 $(mandir)/man8/nsdc.8 $(mandir)/man8/zonec.8 $(mandir)/man8/nsd-notify.8
	rm -f -- $(pidfile) $(dbfile)
	@echo
	@echo "You still need to remove $(configdir) directory by hand."

nsd:	$(NSD_OBJECTS) $(LIBOBJS)
	$(LINK) -o $@ $(NSD_OBJECTS) $(LIBOBJS) $(LIBWRAP) $(LIBS)

zonec:	$(ZONEC_OBJECTS) $(LIBOBJS)
	$(LINK) -o $@ $(ZONEC_OBJECTS) $(LIBOBJS) $(LIBS)

nsd-notify:	$(NSD_NOTIFY_OBJECTS) $(LIBOBJS)
	$(LINK) -o $@ $(NSD_NOTIFY_OBJECTS) $(LIBOBJS) $(LIBS)

clean:
	rm -f zparser dname rbtree *.o *.so y.* *.core *.gmon
	rm -f $(TARGETS)

realclean: clean
	rm -f Makefile config.h config.h.in config.log config.status configure
	rm -rf autom4te*

basename.o:	compat/basename.c
	$(COMPILE) -c compat/basename.c -o basename.o

inet_pton.o:	compat/inet_pton.c
	$(COMPILE) -c compat/inet_pton.c -o inet_pton.o

b64_pton.o:	compat/b64_pton.c
	$(COMPILE) -c compat/b64_pton.c -o b64_pton.o

b64_ntop.o:	compat/b64_ntop.c
	$(COMPILE) -c compat/b64_ntop.c -o b64_ntop.o

snprintf.o:	compat/snprintf.c
	$(COMPILE) -c compat/snprintf.c -o snprintf.o

vsnprintf.o:	compat/vsnprintf.c
	$(COMPILE) -c compat/vsnprintf.c -o vsnprintf.o

timegm.o:	compat/timegm.c
	$(COMPILE) -c compat/timegm.c -o timegm.o

malloc.o:	compat/malloc.c
	$(COMPILE) -c compat/malloc.c -o malloc.o


# Test programs
dname:	dname.c dname.h rbtree.o region-allocator.o util.o
	$(LINK) $(CPPFLAGS) -DTEST -o $@ dname.c rbtree.o region-allocator.o util.o $(LIBS)

rbtree:	rbtree.c rbtree.h region-allocator.o
	$(LINK) $(CPPFLAGS) -DTEST -o $@ rbtree.c region-allocator.o $(LIBS)

zparser:	zparser.c dname.o util.o $(LIBOBJS)
	$(LINK) $(CPPFLAGS) -DTEST -o $@ zparser.c dname.o util.o $(LIBOBJS) $(LIBS)

# Example plugin
example-plugin.o: contrib/example-plugin.c
	$(COMPILE) -c contrib/example-plugin.c -o $@

example-plugin.so: example-plugin.o dname.o
	$(LINK) -shared example-plugin.o dname.o -o $@

# autoconf rules
config.h.in:	configure.ac
	autoheader

configure:	configure.ac
	autoconf

# Dependencies
dbaccess.o: dbaccess.c config.h namedb.h region-allocator.h heap.h \
  rbtree.h util.h
dbcreate.o: dbcreate.c config.h namedb.h region-allocator.h heap.h \
  rbtree.h util.h
dname.o: dname.c config.h dns.h dname.h heap.h rbtree.h \
  region-allocator.h namedb.h util.h
nsd.o: nsd.c config.h dname.h heap.h rbtree.h region-allocator.h dns.h \
  namedb.h nsd.h plugins.h nsd-plugin.h query.h util.h
nsd-notify.o: nsd-notify.c config.h dns.h namedb.h region-allocator.h \
  heap.h rbtree.h dname.h nsd.h query.h util.h zparser.h
plugins.o: plugins.c config.h namedb.h region-allocator.h heap.h rbtree.h \
  plugins.h nsd-plugin.h nsd.h query.h util.h
query.o: query.c config.h dns.h dname.h heap.h rbtree.h \
  region-allocator.h nsd.h namedb.h plugins.h nsd-plugin.h query.h util.h
rbtree.o: rbtree.c config.h rbtree.h region-allocator.h
region-allocator.o: region-allocator.c config.h region-allocator.h
server.o: server.c config.h dns.h namedb.h region-allocator.h heap.h \
  rbtree.h dname.h nsd.h plugins.h nsd-plugin.h query.h util.h
util.o: util.c config.h util.h
zonec.o: zonec.c config.h dname.h heap.h rbtree.h region-allocator.h \
  dns.h namedb.h util.h zonec.h zparser.h
zparser.o: zparser.c config.h dns.h zparser.h dname.h heap.h rbtree.h \
  region-allocator.h util.h
