#
# Standard autoconf pathnames
#
SHELL = @SHELL@
prefix	= @prefix@
exec_prefix = @exec_prefix@
sbindir	= @sbindir@
localstatedir = @localstatedir@
mandir = @mandir@
srcdir = @srcdir@

#
# NSD specific pathnames
#
NSDHOME		= @NSDHOME@
NSDDB           = @NSDDB@
NSDPIDFILE      = @NSDPIDFILE@
NSDCCONF	= @NSDCCONF@
NSDUSER		= @NSDUSER@

CC		= @CC@
CFLAGS		= @CFLAGS@ @DEFS@ -DCF_DBFILE=\"${NSDDB}\" -DCF_PIDFILE=\"${NSDPIDFILE}\" \
			-DCF_USERNAME=\"${NSDUSER}\"
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@
LIBWRAP		= @LIBWRAP@
LIBOBJS		= @LIBOBJS@
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@

COMPILE		= ${CC} ${CFLAGS} -c
LINK		= ${CC} ${LDFLAGS}

CLEANFILES+=*.core *.gmon

all:	nsd zonec nsd-notify

.c.o:
	${CC} ${CFLAGS} -c $<

install: all
	[ -d ${sbindir} ] || mkdir ${sbindir}
	[ -d ${NSDHOME} ] || mkdir ${NSDHOME}
	[ -d ${mandir} ] || mkdir ${mandir}
	${INSTALL} -s nsd ${sbindir}/nsd
	${INSTALL} -s zonec ${sbindir}/zonec
	${INSTALL} -s nsd-notify ${sbindir}/nsd-notify
	${INSTALL} nsdc.sh ${sbindir}/nsdc
	${INSTALL_DATA} nsd.8 ${mandir}/man8
	${INSTALL_DATA} nsdc.8 ${mandir}/man8
	${INSTALL_DATA} zonec.8 ${mandir}/man8
	${INSTALL_DATA} nsd-notify.8 ${mandir}/man8
	${INSTAL_DATA} nsdc.conf.sample ${NSDCCONF}
	${INSTAL_DATA} nsdc.zones.sample ${NSDZONES}

uninstall:
	@echo
	rm -f -- ${sbindir}/nsd ${sbindir}/zonec ${sbindir}/nsdc ${sbindir}/nsd-notify
	rm -f -- ${mandir}/man8/nsd.8 ${mandir}/man8/nsdc.8 ${mandir}/man8/zonec.8 ${mandir}/man8/nsd-notify.8
	rm -f -- ${NSDPIDFILE}
	@echo
	@echo "You still need to remove ${NSDHOME} directory by hand."

nsd:	nsd.h dns.h nsd.o server.o query.o dbaccess.o rbtree.o hash.o ${LIBOBJS}
	${LINK} -o $@ nsd.o server.o query.o dbaccess.o rbtree.o hash.o ${LIBOBJS} ${LIBWRAP}

zonec:	zf.h dns.h zonec.h zf.o zonec.o dbcreate.o rbtree.o hash.o rfc1876.o ${LIBOBJS}
	${LINK} -o $@ zonec.o zf.o dbcreate.o rbtree.o hash.o rfc1876.o ${LIBOBJS}

nsd-notify:	nsd-notify.c query.o dbaccess.o zf.o rbtree.o rfc1876.o
	${LINK} -o $@ nsd-notify.c query.o dbaccess.o zf.o rbtree.o rfc1876.o

clean:
	rm -f zonec nsd zf hash rbtree nsd-notify *.o y.* *.core *.gmon nsd.db nsdc.sh nsdc.conf.sample

basename.o:	compat/basename.c
	${COMPILE} -c compat/basename.c -o basename.o

inet_pton.o:	compat/inet_pton.c
	${COMPILE} -c compat/inet_pton.c -o inet_pton.o


# Test programs
rbtree:	rbtree.c rbtree.h
	${COMPILE} -DTEST rbtree.c
	${LINK} -o $@ rbtree.o

hash:	hash.c hash.h
	${COMPILE} -DTEST hash.c
	${LINK} -o $@ hash.o

zf:	zf.h dns.h zf.c rfc1876.c
	${COMPILE} -DTEST zf.c rfc1876.c
	${LINK} -o $@ zf.o rfc1876.o

# Autoconf dependencies
$(srcdir)/configure: configure.ac aclocal.m4
	cd $(srcdir) && autoconf

# autoheader might not change config.h.in, so touch a stamp file.
$(srcdir)/config.h.in: stamp-h.in
$(srcdir)/stamp-h.in: configure.ac aclocal.m4
	cd $(srcdir) && autoheader
	echo timestamp > $(srcdir)/stamp-h.in

config.h: stamp-h
stamp-h: config.h.in config.status
	./config.status

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

# Dependencies
dbaccess.o: dbaccess.c config.h namedb.h heap.h rbtree.h
dbcreate.o: dbcreate.c config.h namedb.h heap.h rbtree.h
hash.o: hash.c hash.h
nsd-notify.o: nsd-notify.c nsd.h config.h dns.h namedb.h heap.h \
 rbtree.h query.h zf.h rfc1876.h
nsd.o: nsd.c nsd.h config.h dns.h namedb.h heap.h rbtree.h query.h
query.o: query.c nsd.h config.h dns.h namedb.h heap.h rbtree.h query.h
rbtree.o: rbtree.c rbtree.h
rfc1876.o: rfc1876.c config.h
server.o: server.c nsd.h config.h dns.h namedb.h heap.h rbtree.h \
 query.h
zf.o: zf.c config.h dns.h nsd.h namedb.h heap.h rbtree.h query.h zf.h \
 rfc1876.h
zonec.o: zonec.c zonec.h config.h heap.h rbtree.h dns.h zf.h rfc1876.h \
 namedb.h
